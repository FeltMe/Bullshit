<UserControl x:Class="Bullshit.MyVisualTask" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bullshit"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80">
    <Grid x:Name="MyTask" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label FontSize="3" Content="Created by" VerticalAlignment="Center" IsEnabled="False" HorizontalAlignment="Center"/>
        <TextBox x:Name="CretedByBox" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="1, 5, 1,5"/>
        <TextBox x:Name="DescriptionBox" Grid.Row="1" Grid.ColumnSpan="3" />

        <Image Source="/Resources/Apply_Button.png" Grid.Column="2" Grid.Row="2" MouseDown="ApplyClick" Margin="10,15,0,0"/>
        <Image Source="/Resources/Edit.png" Grid.Column="0" Grid.Row="2" MouseDown="EditClick" Margin="0,15,10,0"/>

    </Grid>
</UserControl>
